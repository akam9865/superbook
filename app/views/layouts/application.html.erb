<!DOCTYPE html>
<html>
<head>
  <title>Superbook</title>
	
	<%= stylesheet_link_tag 'application' %>
	<%= javascript_include_tag 'application' %>
	<%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Roboto:400,700' rel='stylesheet' type='text/css'>

</head>
<body>

	
	
	<div class="nav-bar main-nav">
		
		<ul class="nav nav-pills">
		
		
		
		
		<% if signed_in? %>
			<p class="navbar-text">user: <%= current_user.username %></p>
			<p class="navbar-text">bankroll: <%= current_user.bankroll %></p>

			<li class="pull-right">
        <%= link_to "Sign out", session_url, method: :delete %>
      </li>
      <li class="pull-right"><a href="#/sports">sports</a></li>
      <li class="pull-right"><a href="#/users/<%= current_user.id %>">my bets</a></li>
			
		<% else %>
		
			<li><%= link_to "Sign In", new_session_url %></li>
			<li><%= link_to "Sign Up", new_user_url %></li>

		
		<% end %>
		

		
		
		</ul>
	</div>

	<div class="container">
		<%= yield %>
	</div>

</body>

<footer>
  <div>
    <div class="col-xs-3 col-xs-offset-3">
      <img src="https://www.superbook.ag/static/ruicommon/www.superbook.ag/footer-icons-over-18-only.gif">
      <img src="https://www.superbook.ag/static/ruicommon/www.superbook.ag/footer-icons-visa.gif">
      <img src="https://www.superbook.ag/static/ruicommon/www.superbook.ag/footer-icons-skrill.gif">
    </div>
  </div>
</footer>
</html>
