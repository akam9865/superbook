<!DOCTYPE html>
<html>
<head>
  <title>Superbook</title>
	
	<%= stylesheet_link_tag 'application' %>
	<%= javascript_include_tag 'application' %>
	<%= csrf_meta_tags %>

</head>
<body>
	
	
	
	<div class="nav-bar">
		
		<ul class="nav nav-pills">
		
		
		
		<% if signed_in? %>
			<li>user: <%= current_user.username %> ||</li>
			<li>bankroll: <%= current_user.bankroll %></li>


			<li class="pull-right"><%= link_to "Sign out", session_url, method: :delete %></li>
			
		<% else %>
		
			<li><%= link_to "Sign In", new_session_url %></li>
			<li><%= link_to "Sign Up", new_user_url %></li>

		
		<% end %>
		

		
		
		</ul>
	</div>

	<div class="container">
		<%= yield %>
	</div>

</body>
</html>
